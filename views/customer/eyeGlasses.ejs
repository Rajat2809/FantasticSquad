<body onload="JEEWIDGET.start({
    sku: 'rayban_aviator_or_vertFlash',
    searchImageMask: 'https://appstatic.jeeliz.com/jeewidget/images/target.png',
    searchImageColor: 0xff0000,
    onError: function(){ alert('ERROR') }
    })">
    <% include navbar.ejs%>
    <div id="mainContainer">
        <div class="category-heading" align="center"><%= category %></div>
        <hr>
        <div id="product-lists" class="description"></div>
        <hr>
        <br>
        <div align="center">
            <!-- BEGIN JEEWIDGET -->
            <div id='JeeWidget'>

                <!-- MAIN CANVAS : --><canvas id='JeeWidgetCanvas' align="center"></canvas>
                <!-- BEGIN UPLOAD PICTURE BUTTON -->
                <div class='JeeWidgetHiddenFileInput'>
                    <input type='file' id='JeeWidgetFileInput' />
                </div>

                <!-- <button id='JeeWidgetFileInputButton' style="display:none;">Choose image from file</button> -->
                <!-- END UPLOAD PICTURE BUTTON -->
                <!-- BACK TO REALTIME VIDEO BUTTON : --><button id='JeeWidgetBackToRealtimeButton'>Back to
                    video</button>
                <!-- ADJUST BUTTON : -->
                <div id='JeeWidgetAdjust'></div>
                <!-- BEGIN ADJUST NOTICE -->
                <div id='JeeWidgetAdjustNotice'>
                    You can move the glasses yeah !
                    <button id='JeeWidgetAdjustExit'>Quitter</button>
                </div>
                <!-- END AJUST NOTICE -->

                <!-- BEGIN LOADING -->
                <div id='JeeWidgetLoading'>
                    <div class='JeeWidgetLoadingWheel'>
                        <svg viewBox='0 0 32 32' width='32' height='32'>
                            <circle id='spinner' cx='16' cy='16' r='14' fill='none' />
                        </svg>
                    </div>
                </div>
                <!-- END LOADING -->
                <!-- BEGIN FALLBACK (upload picture) NOTICE -->
                <div id='JeeWidgetUploadNotice'>
                    Please upload a picture to tryon your glasses
                    <div class='JeeWidgetHiddenFileInput'>
                        <input type='file' id='JeeWidgetFileInputNotice' />
                    </div>
                    <!-- <button id='JeeWidgetFileInputButtonNotice' style="display:none;">Choose image from file</button> -->
                </div>
            </div>

            <!-- END FALLBACK (upload picture) NOTICE -->
            <button id="previous-products" class="btn btn-outline-dark" onclick="JEEWIDGET.load(getRandom())"><i
                class="fas fa-arrow-left"></i></button>
        <button id="next-products" class="btn btn-outline-dark" onclick="JEEWIDGET.load(getRandom())"><i
                class="fas fa-arrow-right"></i></button>
        </div>
        <!-- END JEEWIDGET -->
       
    </div>

